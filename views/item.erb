<%#= recipe(@page[:recipe]) unless @page[:recipe][:error] %>

<%
  item   = @page[:item]
  recipe = @page[:recipe]
%>

<dl class="recipe" rel="<%= item.id %>">
  <dt>
    <%= item_icon(item) %>
    <%= link_to item.name, "http://www.wowhead.com/?item=#{item.id}", :class => item.quality.downcase %>
    <strong class="rrp" data-price="<%#= recipe[:price] %>"><%#= currency_tags(recipe[:price]) %></strong>
  </dt>
  <% recipe.reagents.each do |reagent| %>
  <dd><var class="quantity"><%= reagent[:quantity] %></var> <%= link_to reagent[:item].name, "http://www.wowhead.com/item=#{reagent[:item].id}", :class => reagent[:item].quality.downcase, :'data-item-price' => 0, :'data-item-id' => reagent[:item].id %></dd>
  <% end %>
</dl>