<select name="realm">
  <option>Global Average</option>
  <% locals[:realms].each do |region, realms| %>
    <optgroup label="<%= region.to_s.upcase %> Realms">
      <% realms.each do |realm| %>
      <%= tag :option, realm[:name], :value => realm[:name].downcase %>
      <% end %>
    </optgroup>
  <% end %>
</select>